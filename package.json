{
   "name": "nest-js-api",
   "version": "0.0.1",
   "description": "",
   "author": "",
   "private": true,
   "license": "UNLICENSED",
   "scripts": {
      "db:dev:rm": "docker compose rm dev-db -s -f -v",
      "db:dev:up": "docker compose up dev-db -d && sleep 5",
      "db:dev:watch": "docker compose logs dev-db -f",
      "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up",
      "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
      "db:test:rm": "docker compose rm test-db -s -f -v",
      "db:test:up": "docker compose up test-db -d && sleep 5 && npm run prisma:test:deploy",
      "db:test:watch": "docker compose logs test-db -f",
      "db:test:restart": "npm run db:test:rm && npm run db:test:up",
      "prebuild": "rimraf dist",
      "build": "nest build",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "ts-node src/index.ts",
      "start:dev": "nest start --watch",
      "start:debug": "nest start --debug --watch",
      "start:prod": "node dist/main",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "dotenv -e .env.test -- jest  --watch --no-cache --config ./test/jest-e2e.json",
      "pretest:e2e": "npm run db:test:restart",
      "typeorm": "typeorm-ts-node-commonjs"
   },
   "dependencies": {
      "@nestjs/common": "^8.0.0",
      "@nestjs/config": "^2.0.1",
      "@nestjs/core": "^8.0.0",
      "@nestjs/jwt": "^8.0.1",
      "@nestjs/passport": "^8.2.1",
      "@nestjs/platform-express": "^8.0.0",
      "@prisma/client": "^3.14.0",
      "argon2": "^0.28.5",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.13.2",
      "mysql": "^2.18.1",
      "pactum": "^3.1.9",
      "passport": "^0.5.3",
      "passport-jwt": "^4.0.0",
      "passport-local": "^1.0.0",
      "postgres": "^3.2.4",
      "reflect-metadata": "^0.1.13",
      "rimraf": "^3.0.2",
      "rxjs": "^7.2.0",
      "typeorm": "0.3.6",
      "pg": "^8.4.0"
   },
   "devDependencies": {
      "@nestjs/cli": "^8.0.0",
      "@nestjs/schematics": "^8.0.0",
      "@nestjs/testing": "^8.0.0",
      "@types/express": "^4.17.13",
      "@types/jest": "27.5.0",
      "@types/node": "^16.11.10",
      "@types/passport-jwt": "^3.0.6",
      "@types/passport-local": "^1.0.34",
      "@types/supertest": "^2.0.11",
      "@typescript-eslint/eslint-plugin": "^5.0.0",
      "@typescript-eslint/parser": "^5.0.0",
      "dotenv-cli": "^5.1.0",
      "eslint": "^8.0.1",
      "eslint-config-prettier": "^8.3.0",
      "eslint-plugin-prettier": "^4.0.0",
      "jest": "28.0.3",
      "prettier": "^2.3.2",
      "prisma": "^3.14.0",
      "source-map-support": "^0.5.20",
      "supertest": "^6.1.3",
      "ts-jest": "28.0.1",
      "ts-loader": "^9.2.3",
      "ts-node": "10.7.0",
      "tsconfig-paths": "4.0.0",
      "typescript": "4.5.2"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
         "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
   }
}